<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/game_title"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/tournament_mode"
                android:textSize="16sp"
                android:textColor="#94A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Symbol Selection Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/choose_symbol"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioSymbols"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- X option -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:background="@drawable/radio_option_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp">

                    <RadioButton
                        android:id="@+id/radioX"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableTop="@drawable/icon_x"
                        android:drawablePadding="12dp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:text="@string/play_as_x"
                        android:textSize="14sp"
                        android:textColor="#E2E8F0"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- O option -->
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:background="@drawable/radio_option_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp">

                    <RadioButton
                        android:id="@+id/radioO"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableTop="@drawable/icon_o"
                        android:drawablePadding="12dp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:text="@string/play_as_o"
                        android:textSize="14sp"
                        android:textColor="#E2E8F0"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RadioGroup>
        </LinearLayout>

        <!-- Rounds Selection Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="@string/number_of_games"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerRounds"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_bg"
                android:paddingHorizontal="16dp" />

            <TextView
                android:text="@string/select_tournament_length"
                android:textSize="12sp"
                android:textColor="#94A3B8"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Primary Action Button -->

        <!-- Secondary Action Buttons -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_bg"
            android:paddingVertical="16dp"
            android:text="@string/start_tournament"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPrinciple"
            android:text="@string/how_to_play"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_secondary_bg"
            android:layout_marginBottom="12dp"
            android:paddingVertical="14dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnLastScore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_secondary_bg"
            android:paddingVertical="14dp"
            android:text="@string/view_last_tournament"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>